        mergeoptions = --no-edit
[tag]
        sort = version:refname
[init]
        defaultBranch = master
        templatedir = ~/.config/git/template
[diff]
        algorithm = histogram
        colorMoved = plain
        mnemonicPrefix = true
        renames = true
        colorMovedWS = allow-indentation-change
[push]
        default = simple
        autoSetupRemote = true
        followTags = true
[fetch]
        prune = true
        pruneTags = true
        all = true
[help]
        autocorrect = prompt
[commit]
        verbose = true
[rerere]
        enabled = true
        autoupdate = true
[core]
        pager = delta
        editor = nvim
[rebase]
        autoSquash = true
        autoStash = true
        updateRefs = true
[merge]
        conflictstyle = zdiff3 
[apply]
        whitespace = fix
[format]
        pretty = fuller
[log]
