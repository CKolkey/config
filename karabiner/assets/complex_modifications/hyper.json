{
  "title": "Remap fn to HYPER",
  "rules": [
    {
      "description": "Remaps fn to shit+cmd+ctrl+opt",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "fn",
            "modifiers": {
              "optional": [ "any" ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [ "left_command", "left_control", "left_option" ]
            }
          ],
        },
      ]
    }
  ]
}
