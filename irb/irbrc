# vim: ft=ruby

IRB.conf[:USE_AUTOCOMPLETE] = false

# require useful gems
gems = %w[
  pry
  active_support
]
gems.each do |gem_name|
  require gem_name
rescue Object => e
  puts "Couldn't require gem #{gem_name}"
end

# require useful stdlibs
libs = %w[
  base64
  benchmark
  fileutils
  json
  securerandom
  stringio
  time
  uri
]
libs.each do |lib_name|
  require lib_name
rescue Object => e
  puts "Couldn't require lib #{lib_name}"
end

require_relative '../ruby/rails_prompt' if defined?(Rails)
require_relative '../ruby/pry_helpers'  if defined?(Pry)
require_relative '../ruby/clipboard_io'
require_relative '../ruby/reline_fzf_patch'
require_relative '../ruby/object_helpers'
